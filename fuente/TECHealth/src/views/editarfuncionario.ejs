<%include partials/_header%>
    <div class="container">
      <h1 class="k2d">Funcionarios</h1>
      <div class="row">
        <!--FORM-->
        <div class="col-md-7">
          <p>Completa la información</p>
          <div class="card">
            <div class="card-body">
              <form action="/editarfuncionario/<%= funcionario_edit._id%>" method="POST">
                <div class="form-group">
                  <input type="number" name="cedula_funcionario" placeholder="Cédula" class="form-control"
                  value="<%= funcionario_edit.Cedula%>">
                </div>
                <div class="form-group">
                  <input type="text" name="nombre_funcionario" placeholder="Nombre" class="form-control"
                  value="<%= funcionario_edit.Nombre%>">
                </div>
                <div class="form-group">
                  <input type="text" name="apellidop_funcionario" placeholder="Apellido Paterno" class="form-control"
                  value="<%= funcionario_edit.Apellido_paterno%>">
                </div>
                <div class="form-group">
                  <input type="text" name="apellidom_funcionario" placeholder="Apellido Materno" class="form-control"
                  value="<%= funcionario_edit.Apellido_materno%>">
                </div>
                <div class="form-group">
                  <select class="form-control" name="tipo_funcionario"  placeholder="Tipo" value="<%= funcionario_edit.Tipo_funcionario%>">
                    <option>Doctor(a)</option>
                    <option>Enfermer(a/o)</option>
                    <option>Secretari(a/o)</option>
                  </select>
                </div>
                <div class="form-group">
                  <input type="date" name="fecha_ingreso_funcionario" placeholder="Fecha Ingreso" class="form-control"
                  value="<%= funcionario_edit.Fecha_ingreso%>">
                </div>
                <div class="form-group">
                  <input type="text" name="area_funcionario" placeholder="Área" class="form-control"
                  value="<%= funcionario_edit.Area_trabajo%>">
                </div>
                <button type="submit" class="btn btn-primary" style="margin: 10px 10px">Actualizar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
<%include partials/_footer%>

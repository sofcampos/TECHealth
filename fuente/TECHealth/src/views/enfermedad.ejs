<%include partials/_header%>
    <div class="container">
      <h1 class="k2d">Enfermedad</h1>
      <div class="row">
        <!--FORM-->
        <div class="col-md-7">
          <p>Completa la información</p>
          <div class="card">
            <div class="card-body">
              <form action="/addenfermedad" method="POST">
                <div class="form-group">
                  <input type="number" name="id_enfermedad" placeholder="Identificación" class="form-control">
                </div>
                <div class="form-group">
                  <input type="text" name="nombre_enfermedad" placeholder="Nombre" class="form-control">
                </div>
                <div class="form-group">
                  <textarea class="form-control" name=descripcion_enfermedad placeholder="Descripción"></textarea>
                </div>
                <div class="form-group">
                  <textarea class="form-control" name=sintomas_enfermedad placeholder="Sintomas: separelas con coma"></textarea>
                </div>
                <div class="form-group">
                  <textarea class="form-control" name=tratamiento_enfermedad placeholder="Tratamientos: separelas con con coma"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="margin: 10px 10px">Agregar</button>
              </form>
            </div>
          </div>
        </div>
        <!--TABLA-->
        <div class="col-md-7">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>Identificación</th>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Síntomas</th>
                <th>Tratamientos</th>
                <th>Operaciones</th>
              </tr>
            </thead>
            <tbody>
              <% for(var i=0; i<enfermedades.length; i++) {%>
                <tr>
                  <td><%= enfermedades[i].Identificacion%></td>
                  <td><%= enfermedades[i].Nombre%></td>
                  <td><%= enfermedades[i].Descripcion%></td>
                  <td><%= enfermedades[i].Sintomas%></td>
                  <td><%= enfermedades[i].Tratamiento%></td>
                  <td>
                    <a href="/eliminarenfermedad/<%= enfermedades[i]._id%>" class="btn btn-danger">Eliminar</a>
                    <a href="/editarenfermedad/<%= enfermedades[i]._id%>" class="btn btn-info">Actualizar</a>
                  </td>
                </tr>

              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
<%include partials/_footer%>

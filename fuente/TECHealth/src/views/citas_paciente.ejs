<%include partials/_header%>
    <div class="container">
      <h1 class="k2d">Citas-Paciente</h1>
      <div class="row">
        <!--FORM-->
        <div class="col-md-7">
          <p>Completa la información</p>
          <div class="card">
            <div class="card-body">
              <form action="/addcita" method="POST">
                <div class="form-group">
                  <input type="text" name="area_cita" placeholder="Área" class="form-control">
                </div>
                <div class="form-group">
                  <input type="date" name="fecha_cita" placeholder="Fecha" class="form-control">
                </div>
                <div class="form-group">
                  <input type="time" name="hora_cita" placeholder="Hora" class="form-control">
                </div>
                <div class="form-group">
                  <textarea name="observaciones_cita" placeholder="Observaciones" class="form-control"></textarea>
                </div>
                <button type="submit" class="btn btn-primary" style="margin: 10px 10px">Agregar</button>
              </form>
            </div>
          </div>
        </div>
        <!--TABLA-->
        <div class="col-md-7">
          <table class="table table-bordered table-hover">
            <thead>
              <tr>
                <th>Identificador</th>
                <th>Estado</th>
                <th>Area</th>
                <th>Fecha</th>
                <th>Hora</th>
                <th>Observaciones</th>
                <th>Cancelar cita</th>
              </tr>
            </thead>

          </table>
        </div>
      </div>
    </div>
<%include partials/_footer%>

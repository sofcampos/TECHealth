<%include partials/_header2%>
    <div class="container">
      <h1 class="k2d">Tratamiento</h1>
      <div class="row">
        <!--FORM-->
        <div class="col-md-7">
          <p>Completa la información</p>
          <div class="card">
            <div class="card-body">
              <form action="/editartratamiento/<%= tratamiento_edit._id%>" method="POST">
                <div class="form-group">
                  <input type="number" name="id_tratamiento" placeholder="Identificación" class="form-control"
                  value="<%= tratamiento_edit.Identificacion%>">
                </div>
                <div class="form-group">
                  <input type="text" name="nombre_tratamiento" placeholder="Nombre" class="form-control"
                  value="<%= tratamiento_edit.Nombre%>">
                </div>
                <div class="form-group">
                  <input type="text" name="tipo_tratamiento" placeholder="Tipo" class="form-control"
                  value="<%= tratamiento_edit.Tipo%>">
                </div>
                <div class="form-group">
                  <input type="number" name="cant_unidades_tratamiento" placeholder="Cantidad de Unidades" class="form-control"
                  value="<%= tratamiento_edit.Cant_unidades%>">
                </div>
                <div class="form-group">
                  <input type="number" name="monto_tratamiento" placeholder="Monto" class="form-control"
                  value="<%= tratamiento_edit.Monto_tratamiento%>">
                </div>
                <button type="submit" class="btn btn-primary" style="margin: 10px 10px">Actualizar</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
<%include partials/_footer%>
